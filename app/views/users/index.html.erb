<h1>List of Users</h1>

<ul class="users-list">
  <% @users.each do |user| %>
    <li>
      <span><%= link_to user.username, user %></span>
      <span><%= link_to 'Edit', edit_user_path(user) %></span>
    </li>
  <% end %>
</ul>

<%= link_to 'New User', new_user_path, class: "new-user-link" %>

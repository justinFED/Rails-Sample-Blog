<p style="color: green"><%= notice %></p>

<h1 class="daily-blog">Daily Blog</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path, class: "new-post-button" %>

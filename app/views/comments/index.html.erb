<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td>
          <%= link_to 'Show', comment_path(comment), class: 'btn btn-info btn-sm mr-1' %>
          <%= link_to 'Edit', edit_comment_path(comment), class: 'btn btn-warning btn-sm mr-1' %>
          <%= button_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Comment', new_comment_path, class: 'btn btn-success mt-3' %>

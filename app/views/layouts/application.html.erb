<!DOCTYPE html>
<html>
  <head>
    <title>SampleBlog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="center-box">
      <% if notice %>
        <p class="notice"></p>
      <% end %>

      <% if alert %>
        <p class="alert"></p>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
